<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Description>Authenticode signing library.</Description>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RuntimeIdentifiers>win-x64;win-x86</RuntimeIdentifiers>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.1.1" />
  </ItemGroup>


  <ItemGroup>
    <None Include="x86\**" Pack="true" PackagePath="build\netcoreapp2.1\x86" />
    <None Include="x64\**" Pack="true" PackagePath="build\netcoreapp2.1\x64"/>
    <None Include="AzureSign.Core.Targets" Pack="true" PackagePath="build\netcoreapp2.1"/>
  </ItemGroup>
</Project>
